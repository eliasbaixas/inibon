- #encoding: utf-8
.row
  .col-md-6
    - cnt = Inibon::Key.with_missing_locales(@locale.key).count
    = "#{@locale.name} (#{@locale.key}): " 
    - if cnt.zero? 
      No missing translations
    - else
      != link_to("#{cnt} missing translations", [:missing,:inibon,@locale])
  .col-md-6
    %h3 Import from YAML file
    = form_tag [:from_yaml, :inibon, @locale], multipart: true do
      = file_field_tag 'yaml'
      = submit_tag 'Submit', class: 'btn'
