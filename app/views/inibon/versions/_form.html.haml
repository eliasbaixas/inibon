.form-group
  = f.label :name, 'Nombre', class: 'control-label col-xs-12 col-md-6'
  .col-xs-12.col-md-6
    = f.text_field :name, class: 'form-control'

.form-group
  = f.label :status, 'Status', class: 'control-label col-xs-12 col-md-6'
  .col-xs-12.col-md-6
    = f.select :status, Inibon::Version::STATUSES, class: 'form-control'
